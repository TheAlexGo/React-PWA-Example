.not-found {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;

    &__top {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    img {
        width: 250px;
        height: 354px;
    }

    h1 {
        font-weight: bold;
        font-size: 96px;
        line-height: 102px;
    }

    p {
        max-width: 70%;
        padding: 0 10px;
        text-align: center;
        font-weight: 500;
        font-size: 15px;
        line-height: 18px;
    }
}
